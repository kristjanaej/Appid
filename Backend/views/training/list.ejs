<!-- Jumbotron -->
<div class="jumbotron">
  <div class="row">
    <div class="collapse" id="form-open">
      <form action="/training/create" method="POST" class="form-horizontal col-sm-8 col-md-offset-2 ">
        <div class="form-group">
          <label for="courseName" class="col-sm-2 control-label">Course Name</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="courseName" name="courseName" placeholder="courseName">
          </div>
          </div>
        <div class="form-group">
          <label for="teacher" class="col-sm-2 control-label">Teacher Name</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="teacher" name="teacher" placeholder="teacher">
          </div>
        </div>
        <div class="form-group">
          <label for="location" class="col-sm-2 control-label">Teacher Name</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="location" name="location" placeholder="location">
          </div>
        </div>
        <div class="form-group">
          <label for="validForDays" class="col-sm-2 control-label">Valid for days</label>
          <div class="col-sm-10">
            <input type="number" class="form-control" id="validForDays" name="validForDays" placeholder="30">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" data-model="<%- req.options.controller %>" class="btn btn-success create-object">Create now</button>
          </div>
        </div>
      </form>
    </div>
  </div>


  <table class="table table-striped">
    <thead>
      <tr>
        <td>Id</td>
        <td>Course</td>
        <td>Teacher</td>
        <td>Location</td>
        <td>Valid for days</td>
        <td>Created At</td>
        <td>Updated At</td>
        <td></td>
      </tr>
    </thead>
    <tbody>
      <% _.each(trainings, function(training) { %>
        <tr>
          <td><%- training.id %></td>
          <td><%- training.courseName %></td>
          <td><%- training.teacher %></td>
          <td><%- training.location %></td>
          <td><%- training.validForDays %></td>
          <td><%=: training.createdAt | humanDate %></td>
          <td><%=: training.updatedAt | humanDate %></td>
          <td><a href="#" class="destroy-object" data-api="<%- req.options.controller %>" data-id="<%- training.id %>" >Destroy</a></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<div class="row text-center">
  <button class="btn btn-primary" role="button" data-toggle="collapse" href="#form-open" aria-expanded="false" aria-controls="form-open">New Item</button>
</div>
