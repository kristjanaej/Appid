<!-- Jumbotron -->
<div class="jumbotron">
  <div class="row">
    <div class="collapse" id="form-open">
      <form action="/aircraftconfig/create" method="POST" class="form-horizontal col-sm-8 col-md-offset-2 ">
        <div class="form-group">
          <label for="dataLoader" class="col-sm-2 control-label">DataLoader</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="dataLoader" name="dataLoader" placeholder="DataLoader">
          </div>
        </div>
        <div class="form-group">
          <label for="etops" class="col-sm-2 control-label">Etops</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="etops" name="etops" placeholder="Etops">
          </div>
        </div>
        <div class="form-group">
          <label for="Wifi" class="col-sm-2 control-label">Wifi</label>
          <div class="col-sm-2 text-left">
            <input type="checkbox" name="wifi" id="wifi" value="false">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" data-model="<%- req.options.controller %>" class="btn btn-success create-object">Create now</button>
          </div>
        </div>
      </form>
    </div>
  </div>


  <table class="table table-striped">
    <thead>
      <tr>
        <td>Id</td>
        <td>Dataloader</td>
        <td>Wifi</td>
        <td>Etops</td>
        <td>Created At</td>
        <td>Updated At</td>
        <td></td>
      </tr>
    </thead>
    <tbody>
      <% _.each(aircraftconfigs, function(aircraftconfig) { %>
        <tr>
          <td><%- aircraftconfig.id %></td>
          <td><%- aircraftconfig.dataLoader %></td>
          <td><%- aircraftconfig.wifi %></td>
          <td><%- aircraftconfig.etops %></td>
          <td><%=: aircraftconfig.createdAt | humanDate %></td>
          <td><%=: aircraftconfig.updatedAt | humanDate %></td>
          <td><a href="#" class="destroy-object" data-api="<%- req.options.controller %>" data-id="<%- aircraftconfig.id %>">Destroy</a></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<div class="row text-center">
  <button class="btn btn-primary" role="button" data-toggle="collapse" href="#form-open" aria-expanded="false" aria-controls="form-open">New Item</button>
</div>
